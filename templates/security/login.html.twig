{% extends 'base/base.html.twig' %}
{% block title 'H.Y | Login' %}

{% block body %}

	<div class="container">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
	</div>

	<div class="row">
		<div class="col-xl-4 col-lg-5 col-md-6 col-sm-10 mx-auto">

			<Div class="card shadow p-3 rounded border-danger my-md-5 my-sm-3">

				{% include '_partials.html.twig/_divider.html.twig' with {
                    'color': 'danger',
                    'margin': '75',
                    'text': 'Sign In'
                } %}

				<form method="post">

					<div class="form-group mb-4 mt-3">
						<label for="inputEmail">
							<span class="text-info me-2 fs-4">&middot;</span>Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
						<div class="form-error">
							<p></p>
						</div>
					</div>

					<div class="form-group mb-3">
						<label for="inputPassword">
							<span class="text-info me-2 fs-4">&middot;</span>Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" required>
					</div>

					<div class="checkbox mt-2 mb-5 d-flex justify-content-between">
						<label for="_remember_me">
							<input type="checkbox" name="_remember_me" id="_remember_me">
							Remember me
						</label>
                        <a href="">
                            Forgot Password ?
                        </a>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div class="d-grid mt-5 mb-3">
						<button class="btn btn btn-danger" type="submit">
							Sign in !
						</button>
					</div>

				</form>

			</Div>

		</div>
	</div>


{% endblock %}
