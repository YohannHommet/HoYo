{% extends 'base/base.html.twig' %}
{% block title %}H.Y |
	{{ a.title }}
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-md-9 mx-auto my-5">

				<article class="card shadow-none border-0 p-5 pd-md-4 p-sm-3">
					<h1 class="card-title mb-2">
						<span class="text-info fs-1">&middot;</span>
						{{ a.title }}
					</h1>
					<div>
						<p class="text-muted">
							Publi√© le
							{{ a.createdAt | date('d-m-Y') }}
							/
							{{ a.category.name }}
						</p>
					</div>

					<img src="../uploads/{{ a.image }}" class="card-img-top img-fluid mx-auto" alt="{{ a.title }}" style="max-width: 500px">

					<p class="card-text">
						{{ a.description | raw }}
					</p>

				</article>

			</div>
		</div>
	</div>

{% endblock %}
