{% extends 'base/base.html.twig' %}
{% block title %}H.Y | {{ a.title }}{% endblock %}

{% block body %}

    <div class="col-10 mx-auto my-5">
        <article class="card shadow-none border-0">
            <img src="../uploads/{{ a.image }}" class="card-img-top img-fluid mx-auto" alt="{{ a.title }}"
                 style="max-width: 600px">
            <div class="card-body p-3">
                <h2 class="card-title">
                    {{ a.title }}
                </h2>
                <p class="card-text">
                    {{ a.description | raw }}
                </p>
            </div>
            <div class="card-footer bg-white-50 d-inline-flex justify-content-between align-items-center">
                <small class="text-muted">{{ a.createdAt | date('d-m-Y') }}</small>
                <span><a href="{{ path('app_blog_show', {'slug': a.slug}) }}" class="btn btn-sm btn-outline-primary">More...</a></span>
            </div>
        </article>
    </div>

{% endblock %}
