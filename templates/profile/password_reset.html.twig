{% extends 'base/base.html.twig' %}
{% block title %}Password Reset{% endblock %}

{% block body %}

    <h1 class="mb-4">Password Reset</h1>

    <div class="row">
        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-10 mx-auto">

            <div class="card shadow p-3 rounded border-info my-md-5 my-sm-3">

                {% include '_partials.html.twig/_divider.html.twig' with {
                    'color': 'info',
                    'margin': '75',
                    'text': 'Update your Password'
                } %}

                {{ form_start(form) }}
                {% form_theme form '_partials.html.twig/_my_form_theme.html.twig' %}

                <div class="form-group mb-3 mt-3">
                    <label for="inputFirstname">
                        <span class="text-danger me-2 fs-4">&middot;</span>
                        Firstname
                    </label>
                    {{ form_widget(form.firstname) }}
                    <div class="form-error">
                        <small>{{ form_errors(form.firstname) }}</small>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="inputFirstname">
                        <span class="text-danger me-2 fs-4">&middot;</span>
                        Lastname
                    </label>
                    {{ form_widget(form.lastname) }}
                    <div class="form-error">
                        <small>{{ form_errors(form.lastname) }}</small>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="inputEmail">
                        <span class="text-danger me-2 fs-4">&middot;</span>
                        Email
                    </label>
                    {{ form_widget(form.email) }}
                    <div class="form-error">
                        <small>{{ form_errors(form.email) }}</small>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="inputNewPasswordFirst">
                        <span class="text-danger me-2 fs-4">&middot;</span>
                        Password
                    </label>
                    {{ form_widget(form.old_password) }}
                    <div class="form-error">
                        <small>{{ form_errors(form.old_password) }}</small>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="inputNewPasswordFirst">
                        <span class="text-danger me-2 fs-4">&middot;</span>
                        Password
                    </label>
                    {{ form_widget(form.new_password.first) }}
                    <div class="form-error">
                        <small>{{ form_errors(form.new_password.first) }}</small>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="inputNewPasswordSecond">
                        <span class="text-danger me-2 fs-4">&middot;</span>
                        Confirm Password
                    </label>
                    {{ form_widget(form.new_password.second) }}
                    <div class="form-error">
                        <small>{{ form_errors(form.new_password.second) }}</small>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('reset_password') }}">

                <div class="d-grid mt-5 mb-3">
                    <button type="submit" class="btn btn-info">Update</button>
                </div>

                {{ form_end(form) }}

            </div>


        </div>
    </div>



{% endblock %}



